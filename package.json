{
  "name": "lint-init",
  "version": "0.2.0",
  "description": "Initialize ESLint, Stylelint, Prettier, EditorConfig for your projects",
  "keywords": [
    "eslint",
    "stylelint",
    "prettier",
    "editorconfig"
  ],
  "homepage": "https://github.com/guoyunhe/lint-init#readme",
  "bugs": {
    "url": "https://github.com/guoyunhe/lint-init/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guoyunhe/lint-init.git"
  },
  "funding": "https://github.com/sponsors/guoyunhe",
  "license": "MIT",
  "author": {
    "name": "Guo Yunhe",
    "email": "i@guoyunhe.me"
  },
  "type": "module",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "lint-init": "dist/lint-init.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "node-scripts build",
    "format": "node-scripts format",
    "lint": "node-scripts lint",
    "test": "node-scripts test",
    "watch": "node-scripts watch"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": "@guoyunhe/node-scripts"
  },
  "jest": {
    "preset": "@guoyunhe/node-scripts"
  },
  "dependencies": {
    "lint-init-framework": "^1.2.0"
  },
  "devDependencies": {
    "@guoyunhe/node-scripts": "^2.2.0",
    "@tsconfig/node20": "^20.1.2",
    "@tsconfig/strictest": "^2.0.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
